extends ../../layout/layout-dash
block container
	.dash-main
		.container
			if (kq)
				p.title Xem thông tin giáo viên
					form.bg-white.create-form.mb-4(action="/admin/giaovien/capnhatgiaovien?magv="+kq.MA_GV, method="post", enctype="multipart/form-data")
						div
							p Ảnh đại diện
								div.text-center
									label.d-block.mb-2(for="anh_dd") 
										img.img-account-profile.rounded-circle.mb-2(src=kq.ANH_DD, alt="")
									input.d-none(type="file", name="anh_dd", id="anh_dd")
									label.button(for="anh_dd") Tải ảnh lên 
						.create-group.mt-2
							.create-item
								label(for='hoten') Họ và tên
								input(type='text', id='hoten', name='hoten', value= kq.HO_TEN)
							.create-item
								label(for='gt') Giới tính
								select.not-focus(class="form-control", id="gt", name="gt")
									option(value="1", selected =(kq.GIOI_TINH==1?true:false)) Nam  
									option(value="0", selected =(kq.GIOI_TINH==0?true:false)) Nữ
						.create-group.mt-2
							.create-item
								label(for='ngaysinh') Ngày sinh
								input(type='date', id='ngaysinh', name='ngaysinh', value= formatDate(kq.NGAY_SINH))
							.create-item
								label(for='sdt') Số điện thoại
								input(type='text', id='sdt', name='sdt' , value= kq.SDT)
						.create-group.mt-2
							.create-item.w-100
								label(for='diachi') Địa chỉ
								input(type='text', id='diachi', name='diachi', value= kq.DIA_CHI)
						.create-group.mt-2
							.create-item.w-100
								label(for='email') Email
								input(type='email', id='email', name='email', value= kq.EMAIL)
						.create-group.mt-2
							.create-item.w-100
								label(for='trinhdo') Trình độ
								input(type='text', id='trinhdo', name='trinhdo', value= kq.TRINH_DO)
						if (!admin)
							.create-group.mt-2
								.create-item.w-100
									label(for='maCN') Chọn chi nhánh
									select.not-focus(class="form-control", id="maCN", name="chinhanh")
										for dsCN in dsMaCN
											option(value= dsCN.MA_CHI_NHANH selected=dsCN.MA_CHI_NHANH==kq.MA_CHI_NHANH?true:false)= dsCN.TEN_CHI_NHANH
						.button-main.mt-4.text-center
							button(type='submit') Cập nhật thông tin
			else
				p.title Không có thông tin
			.flex.flex-end.mt-4
				a.button(href="/admin/giaovien") Trở về



