extends layout/layout
block container
	main 
		section.banner
			.hero-swiper
				.swiper-wrapper
					for item in banner
						.swiper-slide
							img.banner-img(src=item.url, alt="")
							.banner-overlay
				.swiper-button-next
				.swiper-button-prev
				.swiper-pagination
		section.course-home
			.course-home-background
			.container
				h2.text-center.my-5 Các khóa học của ALF Enlish
				.course-home-content
					for kh in dmKH
						.course-home-item
							h4.course-home-title= kh.TEN_DM
							.course-home-main
								img(src=kh.ANH_DD?kh.ANH_DD:"https://res.cloudinary.com/dcbkfpgsp/image/upload/v1683647140/avatars/1683647139617.png", alt=kh.TEN_DM).course-home-img
								a.mx-4.course-home-btn(href="") Học ngay
		section.intro
			.container
				.intro-video
					.intro-video-content
						iframe(width="885", height="498", src="https://www.youtube.com/embed/CBZs5OOvqY4", title="SPEAKING TEST - Jerry", frameborder="0", allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share", allowfullscreen)
				.intro-content
					h3.intro-title Trung tâm anh ngữ ALF
					p Được thành lập năm 2016, từ một trung tâm nhỏ tại đường Đoàn Trần nghiệp, năm 2022 trung tâm anh ngữ ALF khai trương thêm một chi mới tại 38 Mai Xuân Thưởng, phường Vỉnh Hải, thành phố Nha Trang, tỉnh Khánh hòa và một chi nhánh tại Thành Phố Hồ Chí Minh. 
					p Trung tâm anh ngữ ALF cung cấp các khóa học luyện thi Cambridge, TOIEC, IELTS, YLE (Starters, Movers, Flyers), các khóa học về tiếng anh giao tiếp phù hợp với nhu cầu của học viên. Bên cạnh những khóa học, trung tâm còn có hoạt động câu lạc bộ tiếng anh nhằm tạo cho học viên có môi trường vận dụng tiếng anh giúp nâng cao khả năng ngôn ngữ và tăng cường kỹ năng giao tiếp.
		section.teacher
			div.py-5.bg-light.team1
				.container
					.row.justify-content-center.mb-3
						.col-md-12.text-center
							h2.title.mb-3 ĐỘI NGŨ GIÁO VIÊN
							h6.subtitle.font-weight-normal.mb-5 Đội ngũ giáo viên của ALF Enlish đều là những người có chuyên môn cao, nhiệt huyết. Được chọn lọc và đào tạo khắt khe, áp dụng đồng bộ phương pháp RIPL toàn diện. Mỗi giáo viên là sứ giả truyền cảm hứng không chỉ chuyên sâu mà còn truyền động lực và cảm hứng học tiếng Anh.
					.row
						div.col-lg-6.mb-3
							.card.card-shadow.border-0.mb-4
								.row.no-gutters
									.col-md-5.pro-pic(style="background:url(https://res.cloudinary.com/dcbkfpgsp/image/upload/v1686234896/avatars/Screenshot_4_owbrlc.png) center center / cover no-repeat")
									.col-md-7.bg-white
										.p-4
											h6.mb-3.font-weight-medium David Wilson
											p.mb-3 Don't put all your eggs in one basket." (Đừng để tất cả trứng vào một rổ.)
						div.col-lg-6.mb-3
							.card.card-shadow.border-0.mb-4
								.row.no-gutters
									.col-md-5.pro-pic(style="background:url(https://res.cloudinary.com/dcbkfpgsp/image/upload/v1686234828/avatars/Screenshot_3_ngykhy.png) center center / cover no-repeat")
									.col-md-7.bg-white
										.p-4
											h6.mb-3.font-weight-medium John Smith
											p.mb-3 "All's fair in love and war." (Trong tình yêu và chiến tranh, tất cả đều hợp lệ.)
						div.col-lg-6.mb-3
							.card.card-shadow.border-0.mb-4
								.row.no-gutters
									.col-md-5.pro-pic(style="background:url(https://res.cloudinary.com/dcbkfpgsp/image/upload/v1686234964/avatars/Screenshot_5_gplqc9.png) center center / cover no-repeat")
									.col-md-7.bg-white
										.p-4
											h6.mb-3.font-weight-medium Michael Brown
											p.mb-3 "Don't count your chickens before they hatch." (Đừng đếm trứng gà trước khi nở.)
						div.col-lg-6.mb-3
							.card.card-shadow.border-0.mb-4
								.row.no-gutters
									.col-md-5.pro-pic(style="background:url(https://res.cloudinary.com/dcbkfpgsp/image/upload/v1686235028/avatars/Screenshot_6_cxtdfd.png) center center / cover no-repeat")
									.col-md-7.bg-white
										.p-4
											h6.mb-3.font-weight-medium William Martinez
											p.mb-3 "A picture is worth a thousand words." (Một hình ảnh bằng ngàn lời nói.)
		section.branch.section
			.container
				.branch-content
					.branch-map
						#map
					.branch-group
						for kh in cn
							div.branch-item(data-diachi= kh.DIA_CHI)
								h5.branch-title= kh.TEN_CHI_NHANH
								p.branch-desc= kh.DIA_CHI
		section.student.mb-5
			.container
				h2.title HỌC VIÊN ALF
				.student-main
					.student-group
						for item in hocvien
							.student-content
								img(src= item.HINH_DD?item.HINH_DD:"https://res.cloudinary.com/dcbkfpgsp/image/upload/v1684659972/avatars/hanh-1_q2ebrl.jpg", alt="").student-img
								h3.text-white.py-4.student-name= item.HO_TEN
								p.student-desc= item.MON + " - " + item.DIEM
		include ./blocks/guest/faq
		section.facebook
			.container
				.facebook-link.pt-5
					div.fb-page(data-href="https://www.facebook.com/anhngualf", data-tabs="", data-width="", data-height="", data-small-header="false", data-adapt-container-width="true", data-hide-cover="false", data-show-facepile="true")
				#facebook-revew
				script(src="https://widget.trustmary.com/GX78byzNc")  
		include ./blocks/guest/new_post


			