extends ../../layout/layout-dash
block container
	.dash-main
		.container
			p.title Thêm thông tin giáo viên
			form.bg-white.create-form.mb-4(action="/admin/giaovien/themgiaovien", method="post", enctype="multipart/form-data")
				div
					p Ảnh đại diện
						div.text-center
							label.d-block.mb-2(for="anh_dd") 
								img.img-account-profile.rounded-circle.mb-2(src="http://bootdey.com/img/Content/avatar/avatar1.png", alt="")
							input.d-none(type="file", name="anh_dd", id="anh_dd")
							label.button(for="anh_dd") Tải ảnh lên 
				.create-group.mt-2
					.create-item
						label(for='hoten') Họ và tên
						input(type='text', id='hoten', name='hoten')
					.create-item
						label(for='gt') Giới tính
						select.not-focus(class="form-control", id="gt", name="gt")
							option(value="1") Nam  
							option(value="0") Nữ
				.create-group.mt-2
					.create-item
						label(for='ngaysinh') Ngày sinh
						input(type='date', id='ngaysinh', name='ngaysinh')
					.create-item
						label(for='sdt') Số điện thoại
						input(type='text', id='sdt', name='sdt')
				.create-group.mt-2
					.create-item.w-100
						label(for='diachi') Địa chỉ
						input(type='text', id='diachi', name='diachi')
				.create-group.mt-2
					.create-item.w-100
						label(for='email') Email
						input(type='email', id='email', name='email')
				.create-group.mt-2
					.create-item.w-100
						label(for='trinhdo') Trình độ
						input(type='text', id='trinhdo', name='trinhdo')
				if (!admin)
					.create-group.mt-2
						.create-item.w-100
							label(for='maCN') Chọn chi nhánh
							select.not-focus(class="form-control", id="maCN", name="chinhanh")
								for dsCN in dsMaCN
									option(value= dsCN.MA_CHI_NHANH)= dsCN.TEN_CHI_NHANH	
				.button-main.mt-4.text-center
					button(type='submit') Lưu thông tin
			.flex.flex-end.mt-4
				a.button(href="/admin/giaovien") Trở về



