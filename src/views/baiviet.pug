extends layout/layout
block container
	main
		.section.child-banner 
			.child-banner-content
				h2.child-banner-title Bài viết
		section.post.py-5.bg-light
			.container
				.new-post-group
					for post in posts
						a(href=`/baiviet/${post.id}`).new-post-item
							img(src=post.hinh_anh, alt="").new-post-img
							.new-post-content 
								h6.new-post-title= post.tieu_de
		