extends ../../layout/layout-dash
block container
    .dash-main
        .container
            p.title Thêm thông tin học viên
            form.bg-white.create-form.mb-4(action="/admin/hocvien/timkiem", method="get")
                .create-group
                    .create-item
                        label(for='hoten') Họ và tên
                        input(type='text', id='hoten', name='hoten')
                    .create-item
                        label(for='username') Giới tính
                        select.not-focus(class="form-control", id="gt", name="gt")
                            option(value="1") Nam  
                            option(value="0") Nữ
                .create-group
                    .create-item
                        label(for='ngaysinh') Ngày sinh
                        input(type='date', id='ngaysinh', name='ngaysinh')
                    .create-item
                        label(for='sdt') Số điện thoại
                        input(type='text', id='sdt', name='sdt')
                .create-group
                    .create-item.w-100
                        label(for='diachi') Địa chỉ
                        input(type='text', id='diachi', name='diachi')
                .create-group
                    .create-item.w-100
                        label(for='email') Email
                        input(type='email', id='email', name='email')
                .create-group
                    .create-item.w-100
                        p Đối tượng
                        .form-check
                            input(type="radio", id="hs", name="dt", class="form-check-input", value="HS")
                            label(for="hs", class="form-check-label") Học sinh
                        .form-check
                            input(type="radio", id="sv", name="dt", class="form-check-input", value="SV")
                            label(for="sv", class="form-check-label") Sinh viên
                        .form-check
                            input(type="radio", id="dtk", name="dt", class="form-check-input", value="DTK")
                            label(for="dtk", class="form-check-label") Đối tượng khác
                        
                .button-primary
                    button(type='submit') Thêm học viên



