extends ../../layout/layout-dash
block container
    .dash-main
        .container
            p.title Thêm thông tin học viên
            form.bg-white.create-form.mb-4(action="/admin/hocvien/themhocvien", method="post")
                div.row
                    div.col-xl-4
                        div.card.mb-4.mb-xl-0
                            div.card-header Profile Picture
                                div.card-body.text-center
                                    img.img-account-profile.rounded-circle.mb-2(src="http://bootdey.com/img/Content/avatar/avatar1.png", alt="")
                                div.small.font-italic.text-muted.mb-4 JPG or PNG no larger than 5 MB
                                button.btn.btn-primary(type="button") Upload new image
                    div.col-xl-8
                        div.card.mb-4
                            div.card-header Account Details
                            div.card-body
                                div.mb-3
                                    label.small.mb-1(for="inputUsername") Username (how your name will appear to other users on the site)
                                    input.form-control(id="inputUsername", type="text", placeholder="Enter your username", value="username")
                                div.row.gx-3.mb-3
                                    div.col-md-6
                                        label.small.mb-1(for="inputFirstName") First name
                                        input.form-control(id="inputFirstName", type="text", placeholder="Enter your first name", value="Valerie")
                                    div.col-md-6
                                        label.small.mb-1(for="inputLastName") Last name
                                        input.form-control(id="inputLastName", type="text", placeholder="Enter your last name", value="Luna")

                                div.row.gx-3.mb-3
                                    div.col-md-6
                                        label.small.mb-1(for="inputOrgName") Organization name
                                        input.form-control(id="inputOrgName", type="text", placeholder="Enter your organization name", value="Start Bootstrap")
                                    div.col-md-6
                                        label.small.mb-1(for="inputLocation") Location
                                        input.form-control(id="inputLocation", type="text", placeholder="Enter your location", value="San Francisco, CA")
                                div.mb-3
                                    label.small.mb-1(for="inputEmailAddress") Email address
                                    input.form-control(id="inputEmailAddress", type="email", placeholder="Enter your email address", value="name@example.com")
                                div.row.gx-3.mb-3
                                    div.col-md-6
                                        label.small.mb-1(for="inputPhone") Phone number
                                        input.form-control(id="inputPhone", type="tel", placeholder="Enter your phone number", value="555-123-4567")
                                    div.col-md-6
                                        label.small.mb-1(for="inputBirthday") Birthday
                                        input.form-control(id="inputBirthday", type="text", name="birthday", placeholder="Enter your birthday", value="06/10/1988")
                button.btn.btn-primary(type="button") Save changes



